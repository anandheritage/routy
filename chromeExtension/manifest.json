{
  "name": "Routy",
  "short_name": "Routy",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Compose your micro-services' call path. Select different versions of services dynamically.",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "routy.png",
    "default_title": "Routy",
    "default_popup": "popup/index.html"
  },
  "icons": {
    "48": "routy.png",
    "96": "routy.png"
  },
  "permissions":[
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
